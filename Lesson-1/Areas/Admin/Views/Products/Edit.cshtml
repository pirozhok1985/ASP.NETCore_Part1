@model ProductViewModel
@{
    ViewBag.Title = "Product Edit Form";
}
<form asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id">
    <table class="table">
        <tbody>
        <tr>
            <td>
                <input type="text" asp-for="Name" class="table"></input>
                <span asp-validation-for="Name" class="text-danger"></span>
            </td>
            <td>
                <input type="hidden" asp-for="Brand" class="table"></input>
            </td>
            <td>
                <input type="hidden" asp-for="Section" class="table"></input>
            </td>
            <td>
                <input type="text" asp-for="ImageUrl" class="table"></input>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </td>
            <td>
                <input type="number" asp-for="Price" class="table"></input>
                <span asp-validation-for="Price" class="text-danger"></span>
            </td>
            <td>
                <input type="hidden" asp-for="BrandId" class="table"></input>
            </td>
            <td>
                <input type="hidden" asp-for="SectionId" class="table"></input>
            </td>
        </tr>
        </tbody>
    </table>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default"/>
    </div>
    <a asp-controller="Products" asp-action="Index">Back to Products</a>
</form>