@model IEnumerable<WebStore.Models.Employee>
<div class="container">
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Фамилия</th>
            <th>Имя</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.SecondName</td>
                <td>@employee.FirstName</td>
                <td>
                    <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id">Details</a>
                </td>
                <td>
                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                </td>
                <td>
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <a href="/">На главную</a>
</div>