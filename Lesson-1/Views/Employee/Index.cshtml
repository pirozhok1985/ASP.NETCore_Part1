@model IEnumerable<WebStore.Models.Employee>
<div class="container">
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Фамилия</th>
            <th>Имя</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.SecondName</td>
                <td>@employee.FirstName</td>
                <td>
                    <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id">Детали</a>
                </td>
                <td>
                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id">Редактировать</a>
                </td>
                <td>
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id">
                        <i class="fa fa-trash-o"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <a href="/">На главную</a>
    <a asp-controller="Employee" asp-action="Add">Добавить</a>
</div>