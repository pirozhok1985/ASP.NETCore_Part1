        }
        <li>
            <a asp-controller="Cart" asp-action="Index"><i class="fa fa-shopping-cart"></i> Cart</a>
        </li>

        <li>
            <a asp-controller="Account" asp-action="Logout"><i class="fa fa-sign-out"></i> Sign out</a>
        </li>
    </ul>
